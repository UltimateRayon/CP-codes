class Solution {
public:
    bool isValid(string s) {
        int stringsize = s.size();
        stack<char> brackets;
        for (int i = 0; i < stringsize; i++) {
            if (s[i] == '(') {
                brackets.push('(');
            } else if (s[i] == '{') {
                brackets.push('{');
            } else if (s[i] == '[') {
                brackets.push('[');
            } else if (s[i] == ')' and !brackets.empty() and
                       brackets.top() == '(') {
                brackets.pop();
            } else if (s[i] == '}' and !brackets.empty() and
                       brackets.top() == '{') {
                brackets.pop();
            } else if (s[i] == ']' and !brackets.empty() and
                       brackets.top() == '[') {
                brackets.pop();
            } else {
                return false;
            }
        }
        return (brackets.empty()) ? true : false;
    }
};
